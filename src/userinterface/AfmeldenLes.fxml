                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="160.0" prefWidth="50.0" spacing="20.0">
                     <children>
                        <RadioButton fx:id="geenRedenRadioButton" mnemonicParsing="false" selected="true">
                           <toggleGroup>
                              <ToggleGroup fx:id="redenAfmelding" />
