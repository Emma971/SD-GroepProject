            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="160.0" prefWidth="150.0" spacing="20.0">
                     <children>
                        <Label text="Alleen deze les">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label text="De hele dag">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <DatePicker fx:id="AbsentStartDatePicker" promptText="Van" showWeekNumbers="true" />
                        <DatePicker fx:id="AbsentEndDatePicker" promptText="Tot" showWeekNumbers="true" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="160.0" prefWidth="50.0" spacing="20.0">
                     <children>
                        <RadioButton fx:id="dezeLesRadioButton" mnemonicParsing="false" selected="true">
                           <toggleGroup>
                              <ToggleGroup fx:id="lengteAfmelding" />
                           </toggleGroup>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="heleDagRadioButton" mnemonicParsing="false" toggleGroup="$lengteAfmelding">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="VanTotRadioButton" mnemonicParsing="false" toggleGroup="$lengteAfmelding">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </RadioButton>
                     </children>
                  </VBox>
               </children>
