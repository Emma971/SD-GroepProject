         <content>
            <HBox prefHeight="150.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="160.0" prefWidth="200.0" spacing="20.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <Label text="Geen reden">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <Label text="Ziek">
                           <font>
                              <Font size="14.0" />
